<div class="container">
  <h1>Add an ingredient</h1>
</div>
<div class="container">
  <%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
</div>
<div class="container">
  <%= f.submit "Add Dose", class:'btn btn-primary' %>
</div>
<% end %>
