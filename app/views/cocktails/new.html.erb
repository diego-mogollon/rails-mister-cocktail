<div class="container pt-3">
  <h1>Create a new cocktail</h1>
</div>
<div class="container">
<%= simple_form_for(@cocktail) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %>
<div class="container">
  <%= f.submit "Add Cocktail", class:'btn' %>
</div>
<% end %>
</div>
</div>
